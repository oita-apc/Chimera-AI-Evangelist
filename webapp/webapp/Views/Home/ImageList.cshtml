@using CorrectionWebApp.Models
@using CorrectionWebApp.Helper
@using System.Linq
@model ImageListModel
<form id="frmCheck">
<div class="table-responsive">
<table class="table table-hover table-sm table-striped">
    <thead>
        <tr>
            <th class="w-10">No</th>
            <th class="w-10">Date</th>
            @* <th class="w-10">Size</th> *@
            <th class="w-10">Attributes</th>
            <th class="w-10">User</th>
            <th class="w-50">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model.Images)
        {
        <tr>
            <td onclick="openDetail('@row.Id')" data-href="#">@row.ImageNo</td>
            <td onclick="openDetail('@row.Id')" data-href="#">@row.CreatedDate.ToStringJpn()</td>
            @* <td onclick="openDetail('@row.Id')" data-href="#">@(row.Width)x@(row.Height)</td> *@
            <td onclick="openDetail('@row.Id')" data-href="#">
                @if(row.Attributes != null && row.Attributes.Count > 0)
                {
                    @(string.Join("、", row.Attributes.Select(x => x.Name).ToList()))                                    
                }
            </td>
            <td onclick="openDetail('@row.Id')" data-href="#">@row.UserName</td>
            <td onclick="openDetail('@row.Id')" data-href="#">&nbsp;</td>
        </tr>
        }
    </tbody>
</table>
</div>
</form>