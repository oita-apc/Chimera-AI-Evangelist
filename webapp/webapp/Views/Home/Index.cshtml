@model LoginViewModel
<div class="row" style="padding-top:55px">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">Sign in</h4>
                </div>
            </div>
            @if (ViewData["error"] != null)
            {
            <div style="margin:10px">
                <span style="color:red">The User ID or Password is  incorrect. Please try again.</span>
            </div>
            }
            <form class="form-horizontal" action="@Url.Action("Index", "Home")" method="post">
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="Username" class="col-sm-4 col-form-label">User ID</label>
                        <div class="col-sm-8">
                            <input asp-for="Username" type="text" class="form-control required" required  >
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Password" class="col-sm-4 col-form-label">Password</label>
                        <div class="col-sm-8">
                            <input asp-for="Password"  type="password" class="form-control required"  required >
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-sm-5 col-sm-7">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </form>
        </div>
        <!-- /.card -->

    </div>
    <!-- /.col-md-6 -->
    <div class="col-lg-4"></div>

</div>
<!-- /.row -->